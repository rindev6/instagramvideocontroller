{
  "manifest_version": 2,
  "name": "Instagram Video Controller",
  "version": "1.0",
  "description": "Control Instagram videos in an easy way.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "*://www.instagram.com/*"   
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
