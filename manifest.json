{
  "manifest_version": 3,
  "name": "Instagram Video Controller",
  "version": "1.0",
  "description": "Control Instagram videos in an easy way.",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "https://www.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
